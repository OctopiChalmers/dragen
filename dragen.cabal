name:               dragen
version:            0.1.0.0
synopsis:           Derivation of RAndom GENerators
homepage:           https://bitbucket.org/agustinmista/dragen
license:            BSD3
license-file:       LICENSE
author:             Alejandro Russo
                  , AgustÃ­n Mista
maintainer:         amista@dcc.fceia.unr.edu.ar
copyright:          2017 Alejandro Russo 
category:           Testing
build-type:         Simple
extra-source-files: README.md
cabal-version:      >=1.10

library
  hs-source-dirs:   src 
  exposed-modules:
                    Countable
                    DeriveArbitrary
                    TypeInfo
                    Reification
                    Prediction
                    Optimization
                    Arbitrary                   
                    Megadeth

  default-language: Haskell2010
  ghc-options: -O2 -optc-O3 -threaded -rtsopts -ddump-splices

  build-depends:
                    base >= 4.7 && < 5
                  , transformers
                  , QuickCheck
                  , template-haskell
                  , containers
                  , extra
                  , ghc-prim
                  , split
                  , matrix
                    -- hmatrix-gsl requires LAPACK and BLAS libraries
                    -- apt install libblas-dev liblapack-dev libgsl0-dev
                  , hmatrix-gsl
